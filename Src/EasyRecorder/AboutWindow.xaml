<Window x:Class="ESR.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyRecorder"
        mc:Ignorable="d"
        Title="About" Height="200" Width="250" FontSize="10">
    <Grid>
        <DockPanel>
            <StackPanel>
                <TextBlock Foreground="#3393DF" FontSize="14" FontWeight="Black" HorizontalAlignment="Center">Easy Recorder</TextBlock>
                <Image Source="icons8-record-64.ico" Width="48" Margin="10, 10, 10, 10"></Image>
                <TextBlock Margin="10, 10, 10, 0">Copyright(r) 2021 Easy Recorder</TextBlock>
                <TextBlock Margin="10, 0, 10, 0">
                    <Hyperlink NavigateUri="https://icons8.com/" Click="Hyperlink_icons8_Click">
                        https://icons8.com/
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
