<mah:MetroWindow x:Class="AMK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMK"
        xmlns:localui="clr-namespace:AMK.UI"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:tb="clr-namespace:Hardcodet.Wpf.TaskbarNotification;assembly=Hardcodet.Wpf.TaskbarNotification"
        xmlns:ad="clr-namespace:AvalonDock;assembly=AvalonDock"
        mc:Ignorable="d"
        Title="Auto Mouse &amp; Keyboard" Height="300" Width="500" MinWidth="200" MinHeight="200">

    <Window.Resources>
        <ImageSource x:Key="LeftMouseClick">Resources/icons8-mouse_leftclick-64.png</ImageSource>
        <!--<DataTemplate x:Key="RecorderItemTemplate">
            <DockPanel>
                <Image Source=""/>
                <TextBlock>
                    <TextBlock.Text>
                        <Binding />
                    </TextBlock.Text>
                </TextBlock>
            </DockPanel>
        </DataTemplate>-->
    </Window.Resources>

    <DockPanel LastChildFill="False">
  
        <!-- Tray Icon -->
        <tb:TaskbarIcon IconSource="icons8-record-64.ico"
                        ToolTipText="Auto Mouse &amp; Keyboard" 
                        TrayMouseDoubleClick="TaskbarIcon_TrayMouseDoubleClick"/>

        <!-- Menu -->
        <Menu DockPanel.Dock="Top" FontSize="{Binding RelativeSource={RelativeSource Self}, Path=Parent.Parent.FontSize}">
            <MenuItem Header="_File">
               
                <MenuItem Header="File Save..." Click="MenuItem_FileSave_Click">
                    <MenuItem.Icon>
                        <Image Source="Resources/icons8-filesave-64.png" Width="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="File Load..." Click="MenuItem_FileLoad_Click">
                    <MenuItem.Icon>
                        <Image Source="Resources/icons8-fileload-64.png" Width="16"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="_Show Log..." Click="MenuItem_ShowLog_Click">
                    <MenuItem.Icon>
                        <Image Source="Resources/icons8-event-log-48.png" Width="16"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Always Top most" x:Name="MenuAlwaysTopMostItem" Click="MenuItem_AlwaysTopMost_Click" IsCheckable="True" >
                </MenuItem>
                
                <MenuItem Header="Exit" Click="MenuItem_Exit_Click">
                </MenuItem>

            </MenuItem>
            <MenuItem Header="_Recorder">
                <MenuItem Header="Start _Recording" Click="MenuItem_StartRecording_Click">
                    <MenuItem.Icon>
                        <Image Source="Resources/icons8-start-64.png" Width="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Stop Recording" Click="MenuItem_StopRecording_Click">
                    <MenuItem.Icon>
                        <Image Source="Resources/icons8-stop-64.png" Width="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Player">
                <MenuItem Header="Start Playing" Click="MenuItem_StartPlaying_Click">
                </MenuItem>
                <MenuItem Header="Stop Playing" Click="MenuItem_StopPlaying_Click">
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About..." Click="MenuItem_About_Click">
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Status -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem>
                <TextBlock Name="lblCursorPosition" Text="Test Statusbar..."/>
            </StatusBarItem>
            <Separator Grid.Column="1" />
            <StatusBarItem Grid.Column="2">
                <TextBlock Name="lblMousePosition" Text="X: 000, Y: 000" />
            </StatusBarItem>
            <Separator Grid.Column="3" />
            <StatusBarItem Grid.Column="4">
                <ProgressBar Value="50" Width="90" Height="16" />
            </StatusBarItem>
        </StatusBar>

        <!-- Main DockPanel-->
        <localui:RecorderItemView x:Name="RecorderView">

        </localui:RecorderItemView>
    </DockPanel>
    
</mah:MetroWindow>
