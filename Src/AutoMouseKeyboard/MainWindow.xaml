<mah:MetroWindow x:Class="AMK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMK"
        xmlns:localui="clr-namespace:AMK.UI"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:tb="clr-namespace:Hardcodet.Wpf.TaskbarNotification;assembly=Hardcodet.Wpf.TaskbarNotification"
        xmlns:ad="clr-namespace:AvalonDock;assembly=AvalonDock"
        mc:Ignorable="d"
        Title="Auto Mouse &amp; Keyboard" Height="450" Width="800" MinWidth="400" MinHeight="300">

    <Window.Resources>
        <ImageSource x:Key="LeftMouseClick">Resources/icons8-mouse_leftclick-64.png</ImageSource>
        <!--<DataTemplate x:Key="RecorderItemTemplate">
            <DockPanel>
                <Image Source=""/>
                <TextBlock>
                    <TextBlock.Text>
                        <Binding />
                    </TextBlock.Text>
                </TextBlock>
            </DockPanel>
        </DataTemplate>-->
    </Window.Resources>

    <DockPanel LastChildFill="False">
  
        <!-- Tray Icon -->
        <tb:TaskbarIcon IconSource="icons8-record-64.ico"
                        ToolTipText="Auto Mouse &amp; Keyboard" 
                        TrayMouseDoubleClick="TaskbarIcon_TrayMouseDoubleClick"/>

        <!-- Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_AutoKeyboardMouse">
                <MenuItem Header="_Start Hook" Click="MenuItem_StartHook_Click">
                    <MenuItem.Icon>
                        <Image Source="/AutoMouseKeyboard;component/Resources/icons8-start-64.png" Width="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Stop Hook" Click="MenuItem_StopHook_Click">
                    <MenuItem.Icon>
                        <Image Source="/AutoMouseKeyboard;component/Resources/icons8-stop-64.png" Width="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Show Log..." Click="MenuItem_ShowLog_Click">
                    <MenuItem.Icon>
                        <Image Source="/AutoMouseKeyboard;component/Resources/icons8-event-log-48.png" Width="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>


        <!-- Status -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem>
                <TextBlock Name="lblCursorPosition" Text="Test Statusbar..."/>
            </StatusBarItem>
            <Separator Grid.Column="1" />
            <StatusBarItem Grid.Column="2">
                <TextBlock Text="c:\path\of\current\file.txt" />
            </StatusBarItem>
            <Separator Grid.Column="3" />
            <StatusBarItem Grid.Column="4">
                <ProgressBar Value="50" Width="90" Height="16" />
            </StatusBarItem>
        </StatusBar>

        <!--<ad:DockingManager x:Name="dockManager" 
                                   Grid.Row="1">
            --><!--<avd:DockingManager.Theme>
                <avd:MetroTheme />
            </avd:DockingManager.Theme>--><!--

        </ad:DockingManager>-->

        <!-- Main DockPanel-->
        <localui:RecorderItemView x:Name="RecorderView">

        </localui:RecorderItemView>
    </DockPanel>
    
</mah:MetroWindow>
