<UserControl x:Class="AUT.Group.AUTGroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:diagram="clr-namespace:Aga.Diagrams;assembly=Aga.Diagrams"
             xmlns:local="clr-namespace:AUT.Group"
             mc:Ignorable="d" >
    <Grid>
        <diagram:DiagramScrollView>
            <diagram:DiagramView Name="editorDiagram" AllowDrop="True"
                                 ShowGrid="True" GridCellSize="100,100" DocumentSize="1000,1000">
            </diagram:DiagramView>
        </diagram:DiagramScrollView>
    </Grid>
</UserControl>
